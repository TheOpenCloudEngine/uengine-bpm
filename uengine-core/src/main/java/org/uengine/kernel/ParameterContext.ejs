<%
    if(value){
%>
<%
        if(mw3.how == 'list'){
            var variableName = '';
            if( value.variable && value.variable.displayName ){
                variableName = value.variable.displayName.text;
            }else if( value.variable && value.variable.name ){
                variableName = value.variable.name;
            }
%>      
                <td class="parameterContext_td"  style="padding-left:5px;"><%= variableName %></td>
                <td class="parameterContext_td" style="width:100"><%= value.argument != null ?  value.argument.text : '' %></td>
                <td class="parameterContext_td"><%= value.variable.typeInputter %></td>
<%
        }else if(mw3.how == 'add'){
%>
            <div class="form_table2"> 
                <table border="1" cellspacing="0" > 
                    <tbody>
                        <tr>
                            <th width=100>변수선택</th>
                            <td><%=fields.type.here({when:'edit'})%></td>
                        </tr>
                        <tr>
                            <th>변수설명</th>
                            <td><%=fields.argument.here({when:'edit'})%></td>
                        </tr>   
                    </tbody>
                </table>
                <div class="positionRight">
                    <%=methods.saveVariable.here()%>
                <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
<%
        }
%>
<%
    }
%>